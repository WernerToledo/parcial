@{
}

@if (ViewBag.foto != null)
{
    <img src="@ViewBag.foto" />

}

<header>
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="empresa" asp-action="Index">Logo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll"
                    aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="empresa" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="empresa" asp-action="AggOfertas">Agregar ofertas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="empresa" asp-action="edit">Editar ofertas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="empresa" asp-action="vUsuario">Usuarios</a>
                    </li>
                </ul>
                <a class="btn text-light" href="@Url.Action("editEmpresa", "empresa")"><i class="fa-solid fa-user"></i> @ViewBag.nombre</a>
            </div>
        </div>
    </nav>
</header>
<!--Contenido-->

<!--Contenido-->
<div class="container">
    <section id="contact" class="contact">
        <div class="container">

            <div class="row" data-aos="fade-in">

                <div class="col-lg-5 d-flex align-items-stretch">
                    <div class="info">
                        <div class="address">
                            @if(Model.foto != null){
                                <i class="bi ">
                                    <img src="@Model.foto" height="150px" width="150px"/>
                                </i>
                            }
                            else
                            {
                                <i class="bi ">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="90" height="90" fill="black" class="bi bi-briefcase-fill" viewBox="0 0 16 16">
                                        <path d="M6.5 1A1.5 1.5 0 0 0 5 2.5V3H1.5A1.5 1.5 0 0 0 0 4.5v1.384l7.614 2.03a1.5 1.5 0 0 0 .772 0L16 5.884V4.5A1.5 1.5 0 0 0 14.5 3H11v-.5A1.5 1.5 0 0 0 9.5 1h-3zm0 1h3a.5.5 0 0 1 .5.5V3H6v-.5a.5.5 0 0 1 .5-.5z" />
                                        <path d="M0 12.5A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5V6.85L8.129 8.947a.5.5 0 0 1-.258 0L0 6.85v5.65z" />
                                    </svg>
                                </i>
                            }

                            <h2>@Model.nombre</h2>

                        </div>
                    </div>

                </div>

                <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                    <form asp-action="ingresar" method="post" enctype="multipart/form-data">
                        <h4>Ingresar oferta laboral</h4>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="name">plaza de trabajo :</label>
                                <input type="text" name="tipo_trabajo" class="form-control" id="tipo_trabajo" required>

                                <div class="form-group">
                                    <label for="name">Ubicacion :</label>
                                    <input type="text" class="form-control" name="ubicacion" id="ubicacion" required>
                                </div>
                                <div class="form-group">
                                    <label for="name">Experiencia :</label>
                                    <input type="text" class="form-control" name="experiencia" id="experiencia" required></input>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="name">Salario :</label>
                                    <input type="text" class="form-control" name="salario" id="salario" required>
                                </div>
                                <div class="form-group">
                                    <label for="fecha_contratacion" class="form-label">Fecha de contratación</label>
                                    <input type="datetime-local" name="fecha_contratacion" class="form-control" />
                                </div>
                                <div class="input-group mb-4">
                                    <input type="file" class="form-control" id="foto" name="foto" />
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">tipo de contrato :</label>
                                <input type="text" class="form-control" name="tipo_contrato" id="tipo_contrato" required>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="name">Rango de edad :</label>
                                <input type="text" class="form-control" name="rango_edad" id="rango_edad" required>

                            </div>

                            <div class="form-group col-md-3">
                                <label for="name">Nivel academico :</label>
                                <input type="text" class="form-control" name="nivel_academico" id="nivel_academico" required>

                            </div>

                            <div class="form-group">
                                <label for="name">Requisitos :</label>
                                <textarea class="form-control" name="requisitos" id="requisitos" rows="10" required></textarea>
                            </div>

                        </div>

                        <div class="form-group">
                            <label for="name">Habilidades :</label>
                            <textarea class="form-control" name="habilidades" id="habilidades" rows="10" required></textarea>
                        </div>
                        <br>
                        <p class="text-center">
                            <button type="submit" class="btn btn-success">Crear oferta</button>
                        </p>
                        <br>
                    </form>
                </div>

            </div>

        </div>
    </section>
</div>
<footer>
</footer>
 