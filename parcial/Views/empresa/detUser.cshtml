<!--Contenido-->
<h1>Colocar todos los datos de la empresa que sean necesario solo que no se podran editar deben ser en modo vista</h1>

<form>
    <section id="datos" class="pt-5">
        <div class="card border-primary pt-2 mb-4 ">
            <div class="row m-2">
                <h3>Información acerca de la Empresa :</h3>
                <br>

                <div class="container-md-6">
                    <img src=" " class="fluid" alt=" ">
                </div>

                <div class="col-sm-6">
                    <label for="nombre" class="form-label">Nombre de la empresa :</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" readonly>
                </div>


                <div class="col-sm-6 mb-3">
                    <label for="direccion" class="form-label">Dirección :</label>
                    <textarea class="form-control" id="direccion" name="direccion" readonly></textarea>
                </div>

                <div class="col-sm-6 ">
                    <label for="telefono" class="form-label">Telefono :</label>
                    <input type="text" class="form-control" id="telefono" name="telefono" readonly>
                </div>

                <div class="col-sm-4">
                    <label for="correo" class="form-label">Correo :</label>
                    <input type="email" class="form-control" id="correo" name="correo" readonly>
                </div>
            </div>
        </div>
    </section>
</form>

<footer>
</footer>
