<main id="main">

    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/imgs/reunion.jpg" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-light">
                        En busca de tu primer trabajo? identifica tu CV como trainee formar parte
                        de nuestro
                        programa.
                    </h5>
                    <p class="text-light">La mejor forma de obtener experiencia es haciendo</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/imgs/equipo.jpg" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-light">
                        En busca de tu primer trabajo? identifica tu CV como trainee formar parte
                        de nuestro
                        programa.
                    </h5>
                    <p class="text-light">La mejor forma de obtener experiencia es haciendo</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/imgs/laboral.jpg" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-light">
                        En busca de tu primer trabajo? identifica tu CV como trainee formar parte
                        de nuestro
                        programa.
                    </h5>
                    <p class="text-light">La mejor forma de obtener experiencia es haciendo</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    @if (@ViewBag.nombre == null)
    {
        <div class="border-top footer text-muted bg-dark pt-2">
            <div class="container">
                <div class="row text-center d-flex">
                    <div class="col-md-3">
                        <h6 class="text-uppercase font-weight-bold text-light">
                            <i class="fa-solid fa-users"></i> Usuarios: @ViewBag.ConteoUsuarios
                        </h6>
                    </div>

                    <div class="col-md-3">
                        <h6 class="text-uppercase font-weight-bold text-light">
                            <i class="fa-solid fa-suitcase"></i> Empleos publicados: @ViewBag.conteoPublicacion
                        </h6>
                    </div>

                    <div class="col-md-3">
                        <h6 class="text-uppercase font-weight-bold text-light">
                            <i class="fa-solid fa-building-circle-check"></i> Empresas: @ViewBag.ConteoEmpresa
                        </h6>
                    </div>

                    <div class="col-md-3">
                        <h6 class="text-uppercase font-weight-bold text-light">
                            <i class="fa-solid fa-list-check"></i> Solicitudes: @ViewBag.conteoSolicitudes
                        </h6>
                    </div>
                </div>
                <h6 class="text-center text-light">©CopyRight Grupo #4</h6>
            </div>
        </div>
    }
    @if (ViewData["ListaTrabajos"] != null)
    {
        @foreach (var item in (IEnumerable<dynamic>)ViewData["ListaTrabajos"])
        {
            <section id="datos" class="datos">
                <div class="container mt-5 mb-3">

                    <div class="row">
                        <div class="col-lg-4" data-aos="fade-right">
                            @if (item.foto != null)
                            {
                                <img src="@item.foto" class="img-fliud" alt="Imagen de la empresa" style="width: 150px; height: 150px;" />
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" fill="currentColor"
                                     class="bi bi-person-square" viewBox="0 0 16 16">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                    <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12z" />
                                </svg>
                            }

                        </div>
                        <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                            <h3>Nombre de la empresa: @item.nombre</h3>

                            <div class="row">
                                <div class="col-lg-6">
                                    <ul>
                                        <li>
                                            <h4>Tipo de trabajo: @item.tipo_trabajo</h4>
                                        </li>
                                        <li>
                                            <h4>Ubicacion: @item.ubicacion</h4>
                                        </li>

                                        <li>
                                            <h4>Salario $@item.salario</h4>
                                        </li>
                                        <li>
                                            <h4>Tipo de contrato: @item.tipo_contrato</h4>
                                        </li>
                                        <li>
                                            <h4>Fecha de publicacion: @item.fecha_publicacion</h4>
                                        </li>
                                    </ul>
                                </div>

                                <div class="col-lg-6">
                                    <a type="button" class="btn btn-primary" asp-controller="login" asp-action="Index">Aplicar</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        }

        <section style="background-color: #ebebeb;">
            <div class="container my-5 py-5 text-dark">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-6">
                        <h3>Área de comentarios</h3>
                        <div class="card">
                            <div class="card-body p-4">
                                <div class="d-flex flex-start w-100">
                                    <img class="rounded-circle shadow-1-strong me-3"
                                         src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(21).webp" alt="avatar" width="65"
                                         height="65" />
                                    <div class="w-100">
                                        <h5>Name</h5>
                                        <p>Comentario 1</p>
                                        <div class="form-outline">
                                            <textarea class="form-control" id="textAreaExample" rows="4"></textarea>
                                        </div>
                                        <div class="d-flex justify-content-between mt-3">
                                            <label class="form-label" for="textAreaExample">¿Cuál es tu opinión?</label>
                                            <button type="button" class="btn btn-success">Comentar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    }
    else
    {
        <h1 class="text-center">No se encontraron publicaciones, revisar y decomentar abajo para ver excepcion</h1>
    }


